%NOTE: The behaviour of the return statement is covered by the "func_ret" and "func_ret_seq" rules

%%%%%%%%%%%%%%
%Assignment

  %Assign a constant to a variable
  curr_stack_frame' = assign ( curr_stack_frame , v , lval )
  ----------------------------------- :: ass_v
  ctx [assign lval v] ( ctrl , ( curr_stack_frame , call_stack ) , Running ) -> [empty_stmt] ( ctrl , ( curr_stack_frame' , call_stack ) , Running )

  %Assign to a struct field
%  struct { f1 = v1 ; ... ; fn = vn } = lookup_lval ( curr_stack_frame , lval )
%  v' = ( struct { f1 = v1 ; ... ; fn = vn } with f := v )
%  ----------------------------------- :: ass_s
%  ctx [assign ( lval . f ) v] ( ( curr_stack_frame , call_stack ) , Running ) -> [empty_stmt] ( ( curr_stack_frame' , call_stack ) , Running )

  %Assign to a header field
%  header boolv { f1 = v1 ; ... ; fn = vn } = lookup_lval ( curr_stack_frame , lval )
%  v' = ( header boolv { f1 = v1 ; ... ; fn = vn } with f := v )
%  ----------------------------------- :: ass_h
%  ctx [assign ( lval . f ) v] ( ( curr_stack_frame , call_stack ) , Running ) -> [empty_stmt] ( ( curr_stack_frame' , call_stack ) , Running )

%TODO: Now also covered by the assign function
  %Assign to null
  %Note: This is be used to model function calls as an expression.
  ----------------------------------- :: ass_null
  ctx [assign null v] ( ctrl , ( curr_stack_frame , call_stack ) , Running ) -> [empty_stmt] ( ctrl , ( curr_stack_frame , call_stack ) , Running )


%%%%%%%%%%%%%%
%Sequence

  ctx [stmt1] ( ctrl , stacks , Running ) -> [stmt1'] ( ctrl' , stacks' , Running )
  ----------------------------------- :: seq1
  ctx [stmt1 ; stmt2] ( ctrl , stacks , Running ) -> [stmt1' ; stmt2] ( ctrl' , stacks' , Running )

  ----------------------------------- :: seq2
  ctx [empty_stmt ; stmt] ( ctrl , stacks , Running ) -> [stmt] ( ctrl , stacks , Running )

%%%%%%%%%%%%%%
%Conditional

  ----------------------------------- :: cond2
  ctx [if true then stmt1 else stmt2] ( ctrl , stacks , Running ) -> [stmt1] ( ctrl , stacks , Running )

  ----------------------------------- :: cond3
  ctx [if false then stmt1 else stmt2] ( ctrl , stacks , Running ) -> [stmt2] ( ctrl , stacks , Running )

%%%%%%%%%%%%%%
%Declaration

  length ( curr_stack_frame ) - 1  = i
  scope = curr_stack_frame [ i ]
  v = arb_from_t t
  curr_stack_frame' = update ( scope + [ x |-> ( v , NONE ) ] , i , curr_stack_frame )
  ----------------------------------- :: decl
  ctx [decl x t] ( ctrl , ( curr_stack_frame , call_stack ) , Running ) -> [empty_stmt] ( ctrl , ( curr_stack_frame' , call_stack ) , Running )


%%%%%%%%%%%%%%
%Block

  curr_stack_frame' =  curr_stack_frame ++ [ emptyscope ]
  ----------------------------------- :: block_enter
  ctx [begin stmt end] ( ctrl , ( curr_stack_frame , call_stack ) , Running ) -> [begin' stmt end'] ( ctrl , ( curr_stack_frame' , call_stack ) , Running )

  ctx [stmt] ( ctrl , stacks , status ) -> [stmt'] ( ctrl' , stacks' , status' )
  ----------------------------------- :: block_exec
  ctx [begin' stmt end'] ( ctrl , stacks , status ) -> [begin' stmt' end'] ( ctrl' , stacks' , status' )

  curr_stack_frame' = rev ( tl ( rev curr_stack_frame ) )
  ----------------------------------- :: block_exit
  ctx [begin' empty_stmt end'] ( ctrl , ( curr_stack_frame , call_stack ) , Running ) -> [empty_stmt] ( ctrl , ( curr_stack_frame' , call_stack ) , Running )

%%%%%%%%%%%%%%
%Verify

%Case predicate holds
  ------------------------------------------------- :: verify_3
  ctx [verify true ( errmsg x )]( ctrl , stacks , Running ) -> [empty_stmt]( ctrl , stacks , Running )

%Case predicate does not hold
  %TODO: This assumption needed since we don't have string literals yet
  x' = parseError
  x'' = "reject"
  ------------------------------------------------- :: verify_4
  ctx [verify false ( errmsg x )]( ctrl , stacks , Running ) -> [ assign x' ( errmsg x ) ; transition x'' ]( ctrl , stacks , Running )

%%%%%%%%%%%%%%
%Transition

  not_final_state ( x )
  ------------------------------------------------- :: trans_1
  ctx [transition x]( ctrl , stacks , Running ) -> [empty_stmt]( ctrl , stacks , Trans x )

  x = "accept"
  ------------------------------------------------- :: trans_2
  ctx [transition x]( ctrl , stacks , Running ) -> [empty_stmt]( ctrl , stacks , Accept )

  x = "reject"
  ------------------------------------------------- :: trans_3
  ctx [transition x]( ctrl , stacks , Running ) -> [empty_stmt]( ctrl , stacks , Reject )


%%%%%%%%%%%%%%
%Exit

  %TODO: Exit semantics might require to have a specific "function-in-progress" statement
  %      in order to know what to reduce to nothing.

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%     Match-Action rules       %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

  %The action is treated as a function call
  tbl_map ( tbl ) = ( e' , mk )
  ctrl ( tbl , v , mk ) = ( f , ( v1 , .. , vn ) )
  ----------------------------------- :: apply_table_v
  (ty_map, ext_map, func_map, tbl_map) [apply tbl v] ( ctrl , stacks , Running ) -> [assign null ( call f ( v1 , .. , vn ) )] ( ctrl , stacks , Running )

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%Reduction of expression rules %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%Reduction step of return expression
  ctx [e] state ~> [e'] state'
  ----------------------------------- :: ret_e
  ctx [return e] state -> [return e'] state'

%Reduction step of assign expression
  ctx [e] state ~> [e'] state'
  ----------------------------------- :: ass_e
  ctx [assign lval e] state -> [assign lval e'] state'

%Reduction step of condition
  ctx [e] state ~> [e'] state'
  ----------------------------------- :: cond_e
  ctx [if e then stmt1 else stmt2] state -> [if e' then stmt1 else stmt2] state'

%Reduction step of verify predicate
  ctx [e] state ~> [e''] state'
  ------------------------------------------------- :: verify_e1
  ctx [verify e e' ] state -> [verify e'' e'] state'

%Reduction step of error message
  ctx [e] state ~> [e'] state'
  ------------------------------------------------- :: verify_e2
  ctx [verify b e] state  -> [verify b e'] state'

%Reduction step of transition
  ctx [e] state ~> [e'] state'
  ------------------------------------------------- :: trans_e
  ctx [transition e] state -> [transition e'] state'

%Reduction step of match-action expression
  ctx [e] state ~> [e'] state'
  ----------------------------------- :: apply_table_e
  ctx [apply tbl e] state  -> [apply tbl e'] state'

%%%%%%%%%%%%%%%%%%%%%%%%%%
% Parser block semantics %
%%%%%%%%%%%%%%%%%%%%%%%%%%
%This isolates the unstructured parser block semantics into a set of rules defined in terms
%of the regular statement semantics.
%TODO: Can this be unified with the regular statement semantics?

defns
  pars_sem :: '' ::=
defn
  pctx [ stmt ] state -p-> [ stmt' ] state' :: :: pars_red :: pars_
  {{ com parser block semantics }}
  {{ tex [[pctx]] \vdash [ [[stmt]] ] [[state]] {\longrightarrow}_{p} [ [[stmt']] ] [[state']] }}
by

%This rule describes how individual statement steps are taken inside the parser
  status_not_fin status
  (ty_map, ext_map, func_map, empty) [stmt] state -> [stmt'] state'
  ------------------------------------------------- :: stmt
  (ty_map, ext_map, func_map, pars_map) [stmt] state -p-> [stmt'] state'

%This rule governs transitions between parser states
  (ty_map, ext_map, func_map, empty) [stmt]( ctrl , stacks , Running ) -> [stmt']( ctrl' , stacks' , Trans x )
  stmt'' = pars_map ( x )
  ------------------------------------------------- :: state
  (ty_map, ext_map, func_map, pars_map) [stmt]( ctrl , stacks , Running ) -p-> [stmt'']( ctrl' , stacks' , Running )

%If the end of some parser state is reached without status change, we reject
  (ty_map, ext_map, func_map, empty) [stmt]( ctrl , stacks , Running ) -> [empty_stmt]( ctrl' , stacks' , Running )
  x = "reject"
  ------------------------------------------------- :: empty
  (ty_map, ext_map, func_map, pars_map) [stmt]( ctrl , stacks , Running ) -p-> [transition x]( ctrl , stacks' , Running )

%This describes the final step of the parser

  (ty_map, ext_map, func_map, empty) [stmt]( ctrl , stacks , Running ) -> [stmt']( ctrl' , stacks' , pars_fin )
  ------------------------------------------------- :: fin
  (ty_map, ext_map, func_map, pars_map) [stmt]( ctrl , stacks , Running ) -p-> [stmt']( ctrl' , stacks' , pars_fin )

%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Control block semantics %
%%%%%%%%%%%%%%%%%%%%%%%%%%%

defns
  ctrl_sem :: '' ::=
defn
  cctx [ stmt ] state -c-> [ stmt' ] state' :: :: ctrl_red :: ctrl_
  {{ com control block semantics }}
  {{ tex [[cctx]] \vdash [ [[stmt]] ] [[state]] {\longrightarrow}_{c} [ [[stmt']] ] [[state']] }}
by

  not_return stmt
  (ty_map, ext_map, func_map, tbl_map) [stmt] state  -> [stmt'] state'
  ------------------------------------------------- :: stmt
  (ty_map, ext_map, func_map, tbl_map) [stmt] state  -c-> [stmt'] state'

  ------------------------------------------------- :: ret
  cctx [return v] state  -c-> [empty_stmt] state

  ------------------------------------------------- :: ret_2
  cctx [return v ; stmt] state  -c-> [empty_stmt] state

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Architectural-level semantics %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

defns
  arch_sem :: '' ::=
defn
  actx [ arch_stmt ] ( aenv , ctrl , stacks , status ) -'> [ arch_stmt' ] ( aenv' , ctrl' , stacks' , status' ) :: :: arch_red :: arch_
  {{ com architecture-level semantics }}
  {{ tex [[actx]] \vdash [ [[arch_stmt]] ] ( [[aenv]], [[ctrl]], [[stacks]], [[status]] ) {\longrightarrow}_{A} [ [[arch_stmt']] ] ( [[aenv']], [[ctrl']], [[stacks']], [[status']] ) }}
by

%Four different phases: Input, programmable block, fixed-function block and output.

  inp = ab_list [ i ]
  ( in_out_list'' , scope' ) = input_f ( in_out_list , scope )
  i' = i + 1
  ----------------------------------- :: in
  ( ab_list , pblock_map , ffblock_map , input_f , output_f , ty_map , ext_map , func_map ) [ empty_stmt ] ( ( i , false , in_out_list , in_out_list' , scope ) , ctrl , stacks , Running ) -'> [ empty_stmt ] ( ( i' , false , in_out_list'' , in_out_list' , scope' ) , ctrl , stacks , Running )

  %Note that this rule does not increment i. That happens when the pblock is finished.
  pblock x ( e1 , .. , en ) = ab_list [ i ]
  ----------------------------------- :: pbl_call
  ( ab_list , pblock_map , ffblock_map , input_f , output_f , ty_map , ext_map , func_map ) [ empty_stmt ] ( ( i , false , in_out_list , in_out_list' , scope ) , ctrl , stacks , Running ) -'> [ pbl_call x ( e1 , .. , en ) ] ( ( i , true , in_out_list , in_out_list' , scope ) , ctrl , stacks , Running )

  ffblock x ( e1 , .. , en ) = ab_list [ i ]
  ----------------------------------- :: ffbl_call
  ( ab_list , pblock_map , ffblock_map , input_f , output_f , ty_map , ext_map , func_map ) [ empty_stmt ] ( ( i , false , in_out_list , in_out_list' , scope ) , ctrl , stacks , Running ) -'> [ ffbl_call x ( e1 , .. , en ) ] ( ( i , false , in_out_list , in_out_list' , scope ) , ctrl , stacks , Running )

%Note that this always sets index to 0. This could be done conditionally, if it would not be ideal
%to have the final state have index 0.
  out = ab_list [ i ]
  ( in_out_list'' , scope' ) = output_f ( in_out_list' , scope )
  zero i'
  ----------------------------------- :: out
  actx [ empty_stmt ] ( ( i , false , in_out_list , in_out_list' , scope ) , ctrl , stacks , Running ) -'> [ empty_stmt ] ( ( i' , false , in_out_list , in_out_list'' , scope' ) , ctrl , stacks , Running )


%The "programmable block" phase can initiate execution of either a parser block or a control block

%Note that initiation of a parser block also sets parseError to NoError
  parser ( ( x1 , d1 ) , .. , ( xn , dn ) ) pars_map = pblock_map ( f )
  x = "start"
  stmt = pars_map ( x )
  check_args_red [ d1 , .. , dn ] [ e1 , .. , en ]
  %TODO: Should you also be able to read from the global scope?
  scope' = all_arg_update_for_newscope ( ( x1 , .. , xn ) , [ d1 , .. , dn ] , [ e1 , .. , en ] , [ scope ] )
  G scope = curr_stack_frame[0]
  curr_stack_frame' = [G scope] ++ [ scope' ]
  v = errmsg "NoError"
  lval = "parseError"
  curr_stack_frame'' = assign ( curr_stack_frame' , v , lval )
  %TODO: Model arch scope external to the P4 program using the call stack?
  ----------------------------------- :: parser_init
  ( ab_list , pblock_map , ffblock_map , input_f , output_f , ty_map , ext_map , func_map ) [ pbl_call f ( e1 ,  .. , en ) ] ( ( i , true , in_out_list , in_out_list' , scope ) , ctrl , ( curr_stack_frame , call_stack ) , Running ) -'> [ stmt ] ( ( i , true , in_out_list , in_out_list' , scope ) , ctrl , ( curr_stack_frame' , call_stack ) , Running )

  control stmt ( ( x1 , d1 ) , .. , ( xn , dn ) ) tbl_map = pblock_map ( f )
  check_args_red [ d1 , .. , dn ] [ e1 , .. , en ]
  %TODO: Should you also be able to read from the global scope?
  scope'' = all_arg_update_for_newscope ( ( x1 , .. , xn ) , [ d1 , .. , dn ] , [ e1 , .. , en ] , [ scope ] )
  G scope' = curr_stack_frame[0]
  curr_stack_frame' = [G scope'] ++ [ scope'' ]
  %TODO: Model pseudo-scope external to the P4 program using the call stack?
  ----------------------------------- :: control_init
  ( ab_list , pblock_map , ffblock_map , input_f , output_f , ty_map , ext_map , func_map ) [ pbl_call f ( e1 ,  .. , en ) ] ( ( i , true , in_out_list , in_out_list' , scope ) , ctrl , ( curr_stack_frame , call_stack ) , Running ) -'> [ stmt ] ( ( i , true , in_out_list , in_out_list' , scope ) , ctrl , ( curr_stack_frame' , call_stack ) , Running )


%The "programmable block" phase then follows the semantics for a parser or control, respectively...
  %TODO: Create specific control block semantics?

%Note that this rule needs to check that execution is actually inside a parser block to remove ambiguity
  pblock x ( e1 , .. , en ) = ab_list [ i ]
  parser ( ( x1 , d1 ) , .. , ( xn , dn ) ) pars_map = pblock_map ( x )
  status_not_fin status
  ( ty_map , ext_map , func_map , pars_map ) [ stmt ] ( ctrl , stacks , status ) -p-> [ stmt' ] ( ctrl' , stacks' , status' )
  ----------------------------------- :: parser_exec
  ( ab_list , pblock_map , ffblock_map , input_f , output_f , ty_map , ext_map , func_map ) [ stmt ] ( ( i , true , in_out_list , in_out_list' , scope ) , ctrl , stacks , status ) -'> [ stmt' ] ( ( i , true , in_out_list , in_out_list' , scope ) , ctrl' , stacks' , status' )

%Note that this rule needs to check that execution is actually inside a control block to remove ambiguity
  pblock x ( e1 , .. , en ) = ab_list [ i ]
  control stmt'' ( ( x1 , d1 ) , .. , ( xn , dn ) ) tbl_map = pblock_map ( x )
  ( ty_map , ext_map , func_map , tbl_map ) [ stmt ] ( ctrl , stacks , status ) -c-> [ stmt' ] ( ctrl' , stacks' , status' )
  ----------------------------------- :: control_exec
  ( ab_list , pblock_map , ffblock_map , input_f , output_f , ty_map , ext_map , func_map ) [ stmt ] ( ( i , true , in_out_list , in_out_list' , scope ) , ctrl , stacks , status ) -'> [ stmt' ] ( ( i , true , in_out_list , in_out_list' , scope ) , ctrl' , stacks' , status' )

%... until execution using the regular statement semantics has finished


%Note that exiting a parser block also sets the value of parseError
  pblock f ( e1 , .. , en ) = ab_list [ i ]
  parser ( ( x1 , d1 ) , .. , ( xn , dn ) ) pars_map = pblock_map ( f )
  G scope' = curr_stack_frame[0]
  [ scope'' ] = update_return ( curr_stack_frame , [ scope ] , [ d1 , .. , dn ] , ( x1 , .. , xn ) )
  lval = "parseError"
  x = "parseError"
  v = lookup_vexp ( curr_stack_frame , x )
  [ scope''' ] = assign ( [ scope'' ] , v , lval )
  i' = i + 1
  %TODO: Relax requirement that statement be empty in initial state?
  ----------------------------------- :: parser_ret
  ( ab_list , pblock_map , ffblock_map , input_f , output_f , ty_map , ext_map , func_map ) [ empty_stmt ] ( ( i , true , in_out_list , in_out_list' , scope ) , ctrl , ( curr_stack_frame , call_stack ) , pars_fin ) -'> [ empty_stmt ] ( ( i' , false , in_out_list , in_out_list' , scope''' ) , ctrl , ( [ G scope' ] , emptycs ) , Running )

  pblock f ( e1 , .. , en ) = ab_list [ i ]
  control stmt ( ( x1 , d1 ) , .. , ( xn , dn ) ) tbl_map = pblock_map ( f )
  G scope' = curr_stack_frame[0]
  [ scope'' ] = update_return ( curr_stack_frame , [ scope ] , [ d1 , .. , dn ] , ( x1 , .. , xn ) )
  i' = i + 1
  ----------------------------------- :: control_ret
  ( ab_list , pblock_map , ffblock_map , input_f , output_f , ty_map , ext_map , func_map ) [ empty_stmt ] ( ( i , true , in_out_list , in_out_list' , scope ) , ctrl , ( curr_stack_frame , call_stack ) , status ) -'> [ empty_stmt ] ( ( i' , false , in_out_list , in_out_list' , scope'' ) , ctrl , ( [ G scope' ] , emptycs ) , Running )

%TODO: What should happen when all input has been processed?
%      	    Separate judgment form?
%      	    Set status to Ended? Then all rules would need to exclude having the Ended status

  i' = i + 1
  ff ( ( x1 , d1 ) , .. , ( xn , dn ) ) = ffblock_map ( f )
  check_args_red [ d1 , .. , dn ] [ e1 , .. , en ]
  ( scope' , curr_stack_frame' ) = ff ( ( e1 ,  .. , en ) , scope , curr_stack_frame )
  ----------------------------------- :: ffblock_exec
  ( ab_list , pblock_map , ffblock_map , input_f , output_f , ty_map , ext_map , func_map ) [ ffbl_call f ( e1 ,  .. , en ) ] ( ( i , false , in_out_list , in_out_list' , scope ) , ctrl , ( curr_stack_frame , call_stack ) , status ) -'> [ empty_stmt ] ( ( i' , false , in_out_list , in_out_list' , scope' ) , ctrl , ( curr_stack_frame' , call_stack ) , status' )

%"Reduction of argument" rules

%Note that the use of "args_of_pbl" is to avoid having two separate rules for parser and control
  pblock = pblock_map ( f )
  ( ( x1 , d1 ) , .. , ( xn , dn ) ) = args_of_pbl ( pblock )
  unred_arg_index [ d1 , .. , dn ] [ e1 , .. , en ] = i'
  e = [ e1 , .. , en ] [ i' ]
  ctx [ e ] ( ctrl , stacks , status ) ~> [ e' ] ( ctrl' , stacks' , status' )
  [ e'1 , .. , e'n ] =' update ( e' , i' , [ e1 , .. , en ] )
  ----------------------------------- :: pblock_args
  ( ab_list , pblock_map , ffblock_map , input_f , output_f , ty_map , ext_map , func_map ) [ pbl_call f ( e1 , .. , en ) ] ( aenv , ctrl , stacks , status ) -'> [ pbl_call f ( e1' , .. , en' ) ] ( aenv , ctrl' , stacks' , status' )

  ff ( ( x1 , d1 ) , .. , ( xn , dn ) ) = ffblock_map ( f )
  unred_arg_index [ d1 , .. , dn ] [ e1 , .. , en ] = i'
  e = [ e1 , .. , en ] [ i' ]
  ctx [ e ] ( ctrl , stacks , status ) ~> [ e' ] ( ctrl' , stacks' , status' )
  [ e'1 , .. , e'n ] =' update ( e' , i' , [ e1 , .. , en ] )
  ----------------------------------- :: ffblock_args
  ( ab_list , pblock_map , ffblock_map , input_f , output_f , ty_map , ext_map , func_map ) [ ffbl_call f ( e1 , .. , en ) ] ( aenv , ctrl , stacks , status ) -'> [ ffbl_call f ( e1' , .. , en' ) ] ( aenv , ctrl , stacks' , status' )